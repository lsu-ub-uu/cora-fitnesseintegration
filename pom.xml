<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>se.uu.ub.cora</groupId>
		<artifactId>cora-parent</artifactId>
		<version>1.4.4</version>
	</parent>

	<artifactId>fitnesseintegration</artifactId>
	<packaging>jar</packaging>
	<version>3.9.0-SNAPSHOT</version>
	<name>Fitnesse integration</name>

	<properties>
		<logger.version>2.4.0</logger.version>
		<json.version>3.1.0</json.version>
		<httphandler.version>2.4.0</httphandler.version>
		<cora-clientdata.version>3.12.0</cora-clientdata.version>
		<javaclient.version>1.12.0</javaclient.version>
		<javax.ws.rs.version>2.1.1</javax.ws.rs.version>
		<fitnesse.version>20211030</fitnesse.version>
		<jaxb-api.version>2.3.1</jaxb-api.version>
		<activation.version>1.1.1</activation.version>
		<javax-activation.version>1.2.0</javax-activation.version>
		<maven-classpath-plugin.version>1.9</maven-classpath-plugin.version>
		<httpclient.version>4.5.13</httpclient.version>
		<junit.version>4.13.2</junit.version>
		<indexmessenger.version>1.7.0</indexmessenger.version>
		<testutils.version>1.2.0</testutils.version>
	</properties>

	<scm>
		<connection>scm:git:https://github.com/lsu-ub-uu/cora-fitnesseintegration.git</connection>
		<developerConnection>scm:git:https://github.com/lsu-ub-uu/cora-fitnesseintegration.git</developerConnection>
		<url>https://github.com/lsu-ub-uu/cora-fitnesseintegration.git</url>
		<tag>release/3.9</tag>
